<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.category %></p>
<p><%= @restaurant.phone_number %></p>
<ul>
  <% @restaurant.reviews.each do |review| %>
  <li><%= review.content %></li>
  <li><%= review.rating %> </li>
  <% end %>
</ul>

<p><%= link_to "Click here to create a new review for #{@restaurant.name}", new_restaurant_review_path(@restaurant) %></p>

<p><%= link_to "click here to go back to restaurants list", restaurants_path %></p>
